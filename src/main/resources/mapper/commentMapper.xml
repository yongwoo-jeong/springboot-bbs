<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.bbs.comment.CommentMapperInterface">
  <select id="selectComments" resultType="com.springboot.bbs.comment.CommentVO">
    SELECT * FROM comment
      WHERE article_id = #{articleId}
  </select>
  <insert id="insertComment">
    INSERT INTO comment ( content, created_at, article_id)
    VALUES (#{content}, NOW(), #{articleId})
  </insert>
  <delete id="deleteCommentOnArticle">
    DELETE FROM comment
    WHERE article_id = #{articleId}
  </delete>
</mapper>